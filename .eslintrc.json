{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "vue/setup-compiler-macros": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential",
        "plugin:vue/vue3-strongly-recommended",
        "plugin:vue/vue3-recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@",
                        "./resources/js"
                    ]
                ]
            }
        }
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "max-len": [
            "warn",
            120
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "vue/html-indent": [
            "warn",
            2
        ],
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": {
                    "max": 2
                },
                "multiline": {
                    "max": 1
                }
            }
        ],
        "vue/multi-word-component-names": "off",
        "vue/no-multiple-template-root": "off",
        "vue/require-default-prop": "off"
    }
}
